}
<link href="~/Content/css/profile.css" rel="stylesheet" />
<link href="~/Content/css/tabpanel.css" rel="stylesheet" />

<div class="tabbable-panel">
    <div class="tabbable-line">
        <ul class="nav nav-tabs ">
            <li class="active">
                <a href="#tab_default_1" data-toggle="tab">
                    Bilgiler
                </a>
            </li>
            <li>
                <a href="#tab_default_2" data-toggle="tab">
                    Şifre yenile
                </a>
            </li>
            <li>
                <a href="#tab_default_3" data-toggle="tab">
                    Resim değiştir
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_default_1">

                <div class="form-group">
                    <label class="control-label">Tam Adı</label>
                    <input type="text" class="form-control" placeholder="Tam adınız" />

                </div>

                <div class="form-group">
                    <label class="control-label">Meslek</label>
                    <input type="text" class="form-control" placeholder="Meslek" />

                </div>

            </div>
            <div class="tab-pane" id="tab_default_2">

                <div class="form-group">
                    <label class="control-label">Kullanıcı adı</label>
                    <input type="text" class="form-control" placeholder="kullanıcı adınız" />

                </div>

                <div class="form-group">
                    <label class="control-label">Şifre</label>
                    <input type="password" class="form-control" placeholder="yeni şifrenizi giriniz" />
                </div>

                <div class="form-group">
                    <label class="control-label">Şifre tekrar</label>
                    <input type="password" class="form-control" placeholder="yeni şifrenizi tekrar giriniz" />
                </div>

            </div>
            <div class="tab-pane" id="tab_default_3">
                <div class="form-group">
                    <label class="control-label">Yeni resmi seçiniz</label>
                </div>
            </div>
        </div>
    </div>
</div>






